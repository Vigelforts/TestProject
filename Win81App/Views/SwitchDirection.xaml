<UserControl
    x:Class="Paragon.Container.Views.SwitchDirection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Canvas Width="70" Height="40" Tapped="Canvas_Tapped">
            <!-- Top left flag -->
            <Image x:Name="image2" Width="50" Height="30" Canvas.Left="2" Canvas.Top="2" Canvas.ZIndex="3"/>
            <Rectangle Fill="{StaticResource PageBackgroundBrush}" Width="50" Height="30" Canvas.Left="3" Canvas.Top="3" Canvas.ZIndex="2"/>

            <!-- Bottom right flag -->
            <Image x:Name="image1" Width="50" Height="30" Canvas.Left="18" Canvas.Top="8" Canvas.ZIndex="1"/>
            <Rectangle Fill="{StaticResource PageBackgroundBrush}" Width="50" Height="30" Canvas.Left="19" Canvas.Top="9" Canvas.ZIndex="0"/>
        </Canvas>
    </Grid>
</UserControl>
